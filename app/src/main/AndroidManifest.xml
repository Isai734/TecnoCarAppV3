<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navi.tecnocarappv3">

    <!-- To autos-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_loog"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.navi.tecnocarappv3.view.Principal"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.navi.tecnocarappv3.view.activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="com.example.navi.tecnocarappv3.view.activities.SignUpActivity" />
        <activity android:name="com.example.navi.tecnocarappv3.view.activities.ListServActivity" />
        <activity android:name="com.example.navi.tecnocarappv3.view.activities.EditPerfilActivity" />
        <activity android:name="com.example.navi.tecnocarappv3.view.activities.AutoAddActivity" />
        <activity android:name="com.example.navi.tecnocarappv3.view.activities.AutoEditActivity" />
        <activity android:name=".view.activities.AddCitaActivity"></activity>
    </application>

</manifest>